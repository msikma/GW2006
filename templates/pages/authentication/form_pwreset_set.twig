<form action="{{ scripturl }}?action=reminder;sa=setpassword2" name="reminder_form" id="reminder_form" method="post" accept-charset="{{ context.character_set }}">
  <div class="blue_component">
    <div class="blue_component_header">
      <h3 class="blue_component_title">
        {{ context.page_title }}
      </h3>
    </div>
      <div class="blue_component_medium object_list_frame">
        <table class="object_table">
          <tbody>

            <tr class="object_row">
              <th class="minimal">
                {{ txt.choose_pass }}
              </th>
              <td>
                <input type="password" name="passwrd1" id="smf_autov_pwmain" size="22" class="input_password" />
                <span id="smf_autov_pwmain_div" style="display: none;">
                  <img id="smf_autov_pwmain_img" src="{{ images_url }}/__gwnew/ui_icons/field_invalid.gif" alt="*" />
                </span>
              </td>
            </tr>

            <tr class="object_row">
              <th class="minimal">
                {{ txt.verify_pass }}
              </th>
              <td>
                <input type="password" name="passwrd2" id="smf_autov_pwverify" size="22" class="input_password" />
                <span id="smf_autov_pwverify_div" style="display: none;">
                  <img id="smf_autov_pwverify_img" src="{{ images_url }}/__gwnew/ui_icons/field_invalid.gif" alt="*" />
                </span>
              </td>
            </tr>

            <tr class="object_row dark">
              <th class="minimal"></th>
              <td>
                <button type="submit"><strong>{{ txt.save }}</strong></button>
              </td>
            </tr>

          </tbody>
        </table>
      </div>
  </div>
  <input type="hidden" name="code" value="{{ context.code }}" />
  <input type="hidden" name="u" value="{{ context.memID }}" />
  <input type="hidden" name="{{ context.session_var }}" value="{{ context.session_id }}" />
  <script src="{{ default_theme_url }}/scripts/register.js"></script>
  <script>
    {% include 'auxiliary/script_object.twig' with {
      name: 'regTextStrings',
      data: {
        password_short: txt.registration_password_short,
        password_reserved: txt.registration_password_reserved,
        password_numbercase: txt.registration_password_numbercase,
        password_no_match: txt.registration_password_no_match,
        password_valid: txt.registration_password_valid
      }
    } %}
    const verificationHandle = new smfRegister('reminder_form', '{{ modSettings.password_strength ? modSettings.password_strength : 0 }}', 'regTextStrings');
  </script>
</form>
