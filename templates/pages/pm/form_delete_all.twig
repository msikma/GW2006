{% set title = context.delete_all ? txt.delete_message : txt.delete_all %}

{% set content %}
  <p>{{ txt.delete_all_confirm }}</p>
  <strong>
    <a href="{{ scripturl }}?action=pm;sa=removeall2;f={{ context['folder'] }};{{ context['current_label_id'] != -1 ? ';l=' ~ context['current_label_id'] }};{{ context.session_var }}={{ context.session_id }}">{{ txt.yes }}</a>
      -
    <a href="javascript:history.go(-1);">{{ txt.no }}</a>
  </strong>
{% endset %}

{% include 'components/component_article.twig' with {'title': title, 'content': content} %}
