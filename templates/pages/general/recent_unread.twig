{% if context.topics|length %}
  {% include 'pages/objects/threads_index.twig' with {
    'buttons': buttons,
    'index_title': context.page_title,
    'listing_messages_context': {
      'display_sticky_bar': false
    },
    'page_links_context': {
      'is_message_index': false,
      'segments': context.segments,
      'action': context.action
    }
  } %}
{% else %}
  {% include 'components/component_article.twig' with {'title': context.page_title, 'content': context.showing_all_topics ? txt.msg_alert_none : txt.unread_topics_visit_none} %}
{% endif %}
